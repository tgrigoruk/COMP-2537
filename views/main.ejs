  <body>
    <header><%- include('partials/header.ejs') %></header>
    <div id="search">
      <div class="search-group">
        <label for="pokemon_type">TYPE</label>
        <select name="pokemon_type" id="pokemon_type"></select>
      </div>
      <div class="search-group">
        <label for="pokemon_ability">ABILITY</label>
        <select name="pokemon_ability" id="pokemon_ability"></select>
      </div>
      <div class="search-group">
        <label for="pokemon_color">COLOR</label>
        <select name="pokemon_color" id="pokemon_color"></select>
      </div>
      <div class="search-group">
        <label for="pokemon_name">NAME</label>
        <input type="text" id="pokemon_name" />
      </div>
      <div id="history-button-container" class="search-group">
        <button type="button" onclick="showHistory()">history</button>
      </div>
    </div>

    <main id="pokemon-cards-go-here">
      <!-- pokemon cards  -->
    </main>
    <div id="pagination">
      <!-- <button type="button" id="prev"></button> -->
    </div>
    <footer>
      <h2 id="footer-text">Created by Terence Grigoruk 2022</h2>
    </footer>
