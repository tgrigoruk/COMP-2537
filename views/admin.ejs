<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pokedex!</title>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Coiny&family=Press+Start+2P&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/global.css" />
    <link rel="stylesheet" href="/css/admin.css" />
  </head>
  <body>
    <header><%- include('partials/header.ejs') %></header>
    <main>
      <h2>Admin Page â€“ Add/Update Users</h2>
      <form id="update-user-form" action="/updateDatabase" method="POST">
        <p class="errorMessage"><%= message %></p>
        <div id="text-inputs">
          <label for="username">
            username
            <input
              type="text"
              placeholder="Username"
              id="username"
              name="username"
              required
            />
          </label>
          <label for="email">
            email
            <input
              type="text"
              placeholder="Email"
              id="email"
              name="email"
              required
            />
          </label>
          <label for="password">
            password

            <input
              type="text"
              placeholder="Password"
              name="password"
              id="password"
              required
            />
          </label>
        </div>
        <label for="add-user">
          <input
            type="radio"
            name="addOrUpdate"
            id="add-user"
            value="add"
            checked
          />
          create a new user
        </label>

        <label for="update-user">
          <input
            type="radio"
            name="addOrUpdate"
            id="update-user"
            value="update"
            disabled
          />
          update selected user</label
        >

        <label for="admin">
          <input type="checkbox" name="admin" id="admin" />
          make admin</label
        >

        <input
          id="update-database-button"
          type="submit"
          value="update database"
        />
      </form>

      <div id="user-list-container">
        <div id="user-list-header">
          <h3>Username</h3>
          <h3>Email</h3>
          <h3>Added</h3>
          <h3>Edit/Delete</h3>
        </div>
        <div id="user-list"></div>
      </div>
    </main>
    <%- include('partials/footer.ejs') %>
  </body>

  <script src="./js/eventLogger.js"></script>
  <script src="./js/admin.js"></script>
</html>
